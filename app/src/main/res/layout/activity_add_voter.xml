<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2c3e54"
    tools:context="com.mobiapps.andrade.mobivote.AddVoter">

    <include
        layout="@layout/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/include2" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_VotersId"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="false"
        android:layout_below="@+id/include2"
        android:layout_alignLeft="@+id/input_fname"
        android:layout_alignStart="@+id/input_fname"
        android:layout_marginTop="50dp">

        <EditText
            android:id="@+id/edtVotersId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Voters Id"
            android:textColor="@color/colorAccent"
            android:textColorHint="@color/colorAccent" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_fname"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/input_VotersId"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="false"
        android:layout_marginTop="25dp">

        <EditText
            android:id="@+id/edtFname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter First Name"
            android:textColor="@color/colorAccent"
            android:textColorHint="@color/colorAccent"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_lname"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/input_fname"
        android:layout_alignStart="@+id/input_fname"
        android:layout_below="@+id/input_fname"
        android:layout_centerInParent="false"
        android:layout_marginTop="25dp">

        <EditText
            android:id="@+id/edtLname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Last Name"
            android:textColor="@color/colorAccent"
            android:textColorHint="@color/colorAccent"/>

    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/btnAddVoter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/input_lname"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="49dp"
        android:text="Add Voter" />

</RelativeLayout>
