<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2c3e54"
    tools:context="com.mobiapps.andrade.mobivote.AdminActivity">

    <include
        layout="@layout/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/include3" />

    <Button
        android:id="@+id/btnUsers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="users"
        android:layout_marginRight="46dp"
        android:layout_marginEnd="46dp"
        android:layout_alignBaseline="@+id/btnCandidates"
        android:layout_alignBottom="@+id/btnCandidates"
        android:layout_toLeftOf="@+id/btnCandidates"
        android:layout_toStartOf="@+id/btnCandidates" />

    <Button
        android:id="@+id/btnCandidates"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="19dp"
        android:text="Candidates"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="47dp"
        android:layout_marginEnd="47dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="33dp"
        android:text="Results"
        android:textColor="#fff"
        android:textSize="24sp"
        android:layout_below="@+id/include3"
        android:layout_centerHorizontal="true" />

    <Spinner
        android:id="@+id/spnPos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView2"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="29dp"
        android:backgroundTint="#ffff"
        />

    <TextView
        android:id="@+id/txtResults"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/spnPos"
        android:layout_alignStart="@+id/spnPos"
        android:layout_below="@+id/spnPos"
        android:layout_marginTop="25dp"
        android:text="TextView"
        android:textColor="#fff" />

    <TextView
        android:id="@+id/txtNumVotes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txtResults"
        android:layout_alignBottom="@+id/txtResults"
        android:layout_alignEnd="@+id/spnPos"
        android:layout_alignRight="@+id/spnPos"
        android:text="TextView"
        android:textColor="#ffff" />


</RelativeLayout>
